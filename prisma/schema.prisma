datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MaintenanceTicket {
  id          String       @id @default(cuid())
  title       String
  description String
  status      TicketStatus @default(OPEN)
  priority    String?
  imageUrl    String?
  tenantId    String
  roomId      String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  vendorId    String?
  room        Room         @relation(fields: [roomId], references: [id])
  tenant      User         @relation(fields: [tenantId], references: [id])
  vendor      Vendor?      @relation(fields: [vendorId], references: [id])
}

model User {
  id                  String              @id @default(cuid())
  name                String?
  email               String?             @unique
  emailVerified       DateTime?
  image               String?
  password            String?
  role                Role                @default(TENANT)
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @default(now()) @updatedAt
  accounts            Account[]
  auditLogs           AuditLog[]
  adminConversations  Conversation[]      @relation("AdminConversations")
  tenantConversations Conversation[]      @relation("TenantConversations")
  documents           Document[]
  leases              Lease[]
  maintenanceTickets  MaintenanceTicket[]
  sentMessages        Message[]
  notifications       Notification[]
  reservation         Reservation[]
  sessions            Session[]
}

model Expense {
  id          String    @id @default(cuid())
  propertyId  String?
  category    String
  description String
  amount      Float
  expenseDate DateTime
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  property    Property? @relation(fields: [propertyId], references: [id])
}

model Property {
  id          String    @id @default(cuid())
  name        String
  location    String
  description String?
  amenities   String[]
  totalPrice  Float?
  ownerId     String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  images      String[]
  latitude    Float?
  longitude   Float?
  expenses    Expense[]
  rooms       Room[]
}

model Room {
  id                 String              @id @default(cuid())
  roomNumber         String
  type               String
  price              Float
  isOccupied         Boolean             @default(false)
  description        String?
  images             String[]
  propertyId         String
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  lease              Lease?
  maintenanceTickets MaintenanceTicket[]
  reservation        Reservation[]
  property           Property            @relation(fields: [propertyId], references: [id], onDelete: Cascade)
}

model Lease {
  id        String    @id @default(cuid())
  startDate DateTime
  endDate   DateTime
  isActive  Boolean   @default(true)
  tenantId  String
  roomId    String    @unique
  createdAt DateTime  @default(now())
  invoices  Invoice[]
  room      Room      @relation(fields: [roomId], references: [id])
  tenant    User      @relation(fields: [tenantId], references: [id])
  payments  Payment[]
}

model Reservation {
  id        String            @id @default(cuid())
  userId    String
  roomId    String
  createdAt DateTime          @default(now())
  status    ReservationStatus @default(PENDING)
  room      Room              @relation(fields: [roomId], references: [id])
  user      User              @relation(fields: [userId], references: [id])

  @@unique([userId, roomId])
}

model Payment {
  id          String   @id @default(cuid())
  amount      Float
  paymentDate DateTime
  method      String
  status      String
  leaseId     String
  createdAt   DateTime @default(now())
  invoice     Invoice?
  lease       Lease    @relation(fields: [leaseId], references: [id])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PaymentGateway {
  id          String          @id @default(cuid())
  provider    GatewayProvider @unique
  name        String
  description String?
  isEnabled   Boolean         @default(false)
  apiKey      String?
  apiSecret   String?
  vendor      String?
  isLiveMode  Boolean         @default(false)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  meta        Json?
}

model Invoice {
  id             String        @id @default(cuid())
  leaseId        String
  amount         Float
  dueDate        DateTime
  status         InvoiceStatus @default(DUE)
  paymentId      String?       @unique
  createdAt      DateTime      @default(now())
  transactionRef String?       @unique
  lease          Lease         @relation(fields: [leaseId], references: [id])
  payment        Payment?      @relation(fields: [paymentId], references: [id])
}

model Document {
  id        String       @id @default(cuid())
  tenantId  String
  name      String
  type      DocumentType @default(OTHER)
  url       String
  publicId  String
  createdAt DateTime     @default(now())
  tenant    User         @relation(fields: [tenantId], references: [id], onDelete: Cascade)
}

model Conversation {
  id        String    @id @default(cuid())
  tenantId  String
  adminId   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  admin     User      @relation("AdminConversations", fields: [adminId], references: [id])
  tenant    User      @relation("TenantConversations", fields: [tenantId], references: [id])
  messages  Message[]

  @@unique([tenantId, adminId])
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  senderId       String
  content        String
  isRead         Boolean      @default(false)
  createdAt      DateTime     @default(now())
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender         User         @relation(fields: [senderId], references: [id])
}

model Vendor {
  id              String              @id @default(cuid())
  name            String
  trade           String
  phone           String?
  email           String?             @unique
  assignedTickets MaintenanceTicket[]
}

model Translation {
  id     String @id @default(cuid())
  locale String
  key    String
  value  String

  @@unique([locale, key])
}

model HomepageContent {
  id                String   @id @default(cuid())
  locale            String
  sectionIdentifier String
  isEnabled         Boolean  @default(true)
  content           Json
  updatedAt         DateTime @updatedAt

  @@unique([locale, sectionIdentifier])
}

model Setting {
  id          String  @id @unique
  jsonContent Json?
  isEnabled   Boolean @default(true)
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  title     String
  message   String
  type      NotificationType @default(INFO)
  link      String?
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
}

